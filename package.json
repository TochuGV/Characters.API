{
  "name": "characters.api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch --env-file=.env src/index.js",
    "services:up": "docker compose up -d --wait sqlserver redis_cache redis_commander",
    "services:stop": "docker compose stop",
    "services:down": "docker compose down",
    "services:nuke": "docker compose down -v",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node --env-file=.env prisma/seed.js",
    "docker:up": "docker compose up --build",
    "docker:entrypoint": "npm run prisma:deploy && node prisma/seed.js && npm run start",
    "test": "npm run test:setup && npm run test:seed && npm run test:run",
    "test:watch": "npm run test:setup && npm run test:seed && npm run test:run -- --watch",
    "test:setup": "node --env-file=.env.test node_modules/prisma/build/index.js db push --accept-data-loss",
    "test:seed": "node --env-file=.env.test prisma/seed.js",
    "test:run": "node --env-file=.env.test --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "monitor": "node src/scripts/monitor.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/adapter-mssql": "7.3.0",
    "@prisma/client": "7.3.0",
    "bcrypt": "6.0.0",
    "compression": "1.8.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "helmet": "8.0.0",
    "ioredis": "5.9.2",
    "jest": "30.2.0",
    "jsonwebtoken": "9.0.3",
    "mssql": "11.0.1",
    "node-cache": "5.1.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pino": "10.1.0",
    "supertest": "7.2.2",
    "swagger-ui-express": "5.0.1",
    "zod": "3.24.2"
  },
  "overrides": {
    "semver": "7.5.4"
  },
  "devDependencies": {
    "dotenv": "17.2.3",
    "pino-pretty": "13.1.3",
    "prisma": "7.3.0"
  }
}
