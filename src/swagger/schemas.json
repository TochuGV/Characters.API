{
    "Character": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "format": "uuid"
            },
            "image": {
                "type": "string",
                "maximum": 255
            },
            "name": {
                "type": "string",
                "maximum": 100
            },
            "age": {
                "type": "integer",
                "minimum": 0
            },
            "weight": {
                "type": "number",
                "format": "float",
                "exclusiveMinium": 0
            },
            "story": {
                "type": "string"
            }
        },
        "required": ["id", "image", "name"]
    },
    "Movie": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "format": "uuid"
            },
            "image": {
                "type": "string",
                "maximum": 255
            },
            "title": {
                "type": "string",
                "maximum": 100
            },
            "creationDate": {
                "type": "string",
                "format": "date",
                "example": "2022-12-18",
                "description": "La fecha de estreno debe ser posterior a 1888, año en que se considera que se creó la primera película"
            },
            "rating": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5
            }
        },
        "required": ["id", "image", "title", "creationDate"]
    },
    "User": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "format": "uuid"
            },
            "email": {
                "type": "string",
                "format": "email",
                "maximum": 100,
                "example": "user@example.com",
                "description": "Debe ser un correo válido."
            },
            "password": {
                "type": "string",
                "minimum": 6,
                "maximum": 100
            }
        },
        "required": ["id", "email", "password"]
    }
}
